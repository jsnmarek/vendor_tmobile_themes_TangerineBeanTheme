<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/holo_blue_trans" android:endColor="@color/holo_blue_trans" android:angle="90.0" android:centerColor="@color/holo_blue_trans" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/holo_blue_trans" android:endColor="@color/holo_blue_trans" android:angle="90.0" android:centerColor="@color/holo_blue_trans" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="@color/holo_blue_trans" android:endColor="@color/holo_blue_trans" android:angle="90.0" android:centerColor="@color/holo_blue_trans" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#fff6f6f6" android:endColor="#fff6f6f6" android:angle="90.0" />
        </shape>
    </item>
</selector>